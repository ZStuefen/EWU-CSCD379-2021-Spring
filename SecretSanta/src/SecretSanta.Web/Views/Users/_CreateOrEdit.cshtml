@model UserViewModel

<section class="mb-6">
<div asp-validation-summary='All'></div>
<div class="lg:flex mb-6">
    <div class="lg:flex lg:w-1/2">
        <div class="w-1/3">
            <label class="text-gray-500 font-bold text-right" asp-for="FirstName"></label>
        </div>
        <div class="lg:w-2/3">
            <input class="focus:outline-none focus:ring-transparent focus:border-indigo-600" type="text" asp-for="FirstName" />
        </div>
    </div>
    <div class="lg:flex lg:w-1/2">
        <div class="w-1/3">
            <label class="text-gray-500 font-bold text-right" asp-for="LastName"></label>
        </div>
        <div class="lg:w-2/3">
            <input type="text" asp-for="LastName" />
        </div>
    </div>
</div>
</section>