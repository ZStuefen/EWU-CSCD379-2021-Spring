        <label asp-for="GroupName"></label>: <input type="text" asp-for="GroupName" />
        <span asp-validation-for="GroupName"></span>
    </div>
    <button>Create</button>
    <a asp-controller="Groups" asp-action="Index">Cancel</a>
</form>