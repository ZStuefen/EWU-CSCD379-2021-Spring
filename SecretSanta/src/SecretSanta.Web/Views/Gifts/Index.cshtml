@model List<GiftViewModel>

@{int counter = 0;}

@foreach(var gift in Model) {
    <section>
        @gift.Title - @gift.Description - @gift.URL - @gift.Priority - @MockData.Users[gift.UserId].FullName <a asp-controller="Gifts" asp-action="Edit" asp-route-id=@counter>Edit</a>
        <form asp-controller="Gifts" asp-action="Delete" asp-route-itemid=@counter method="post"><button>X</button></form>
        @{counter++;}
    </section>
}
<a asp-controller="Gifts" asp-action="Create">Create</a>